---
//Importar estilos CSS
import "../styles/global.css";
import imageNavLogo from "../assets/taza.webp"
import imageHtmlLogo from "../assets/etiquetaHtml.png"
import imageHtmlLogoSvg from "../assets/html-tag.svg"
---

<!--Componente de navegacion -->
<div class="nav">
  <div class="nav-logo">
    <!-- Mi logo  -->
    <img src={imageHtmlLogoSvg.src} alt=" descriptive text" width="40" height="40" class="nav_nav-logo_img_logoHtml">
  </div>
 <div class="nav-links">
    <a class="nav-buttons" href="/">Inicio</a>
    <a class="nav-buttons" href="/about/">Sobre mi</a>
    <a class="nav-buttons" href="/blog/">Blog</a>
  </div>
</div>

<style>
/* Bordes del contenedor principal */

.nav {
  border: 1px solid rgb(116, 116, 110);
  border-radius: 12px;
}

.nav_nav-logo_img_logoHtml {
  background-color: #ffffff;
  border-radius: 50px;
  border-style: None;
}







.nav-buttons::before {
  content: '';
  position:absolute;
  bottom: 30%;
  left: 0px;
  width: 100%;
  height: 1px;
  background: #d3d3d382;
  display: block;
  -webkit-transform-origin: right top;
  -ms-transform-origin: right top;
  transform-origin: right top;
  -webkit-transform: scale(0, 1);
  -ms-transform: scale(0, 1);
  transform: scale(0, 1);
  -webkit-transition: transform 0.4s cubic-bezier(1, 0, 0, 1);
  transition: transform 0.4s cubic-bezier(1, 0, 0, 1)
}

.nav-buttons:hover::before {
  -webkit-transform-origin: left top;
  -ms-transform-origin: left top;
  transform-origin: left top;
  -webkit-transform: scale(1, 1);
  -ms-transform: scale(1, 1);
  transform: scale(1, 1)
}
</style>